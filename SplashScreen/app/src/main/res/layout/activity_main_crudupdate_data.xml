    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin"
            android:background="#69e2e2e2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="NOME:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/nome"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:layout_marginLeft="20dp"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="DN:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/data_nasc"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Data de Nascimento"
                android:inputType="number" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="SEXO:"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/sexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sexo"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="TELEFONE:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="CPF:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF"
                android:enabled="false"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="EMAIL:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:enabled="false"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="CEP:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/cep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CEP"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="ENDEREÇO:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Endereço"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Nº:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/end_num"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Número"
                android:inputType="number" />

            <EditText
                android:id="@+id/complemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Complemento"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="BAIRRO:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/bairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bairro"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="CIDADE:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/cidade"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/uf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UF"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="CNH:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/cnh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CNH"
                android:enabled="false"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="PLACA DO VEÍCULO:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/placa_veiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Placa"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="ALVARÁ:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/alvara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alvara"
                android:inputType="number" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="CRACHA:"
                    android:textStyle="bold"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/cracha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nº"
                    android:inputType="textPersonName" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="AGÊNCIA:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/agencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Agência"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="OPERAÇAO:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/operacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Operação"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="CONTA:"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/conta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Conta"
                android:inputType="textPersonName" />

        </LinearLayout>

            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="#ef9f00"
                android:gravity="center"
                android:text="Atualizar"
                android:textColor="#ffffff"
                android:textSize="20dp"/>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:id="@+id/progresso"
        android:visibility="invisible"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

</RelativeLayout>
