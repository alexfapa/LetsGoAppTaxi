<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_notification"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.tutorialandroid.splashscreen.MainNotification">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/taxi_id_taxista"
        android:visibility="invisible"
        android:textColor="#000000"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOVO CLIENTE CHAMANDO"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center"/>-->

        <TextView
            android:id="@+id/title_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Título"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#faffc6"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/txt_push_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/wallet_dim_foreground_inverse_holo_dark"
                android:layout_gravity="center"
                android:textSize="15dp" />

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clique no botão abaixo para aceitar a corrida"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/status_taxi"
        android:visibility="invisible"
        android:textColor="#000000"
        android:textSize="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/aceitarcorrida"
        android:visibility="invisible"
        android:textColor="#000000"
        android:textSize="0dp" />

    <Button
        android:id="@+id/btn_aceita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACEITAR"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/btn_rejeita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REJEITAR"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_red_dark" />

    <!--
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/usu_name"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/usu_email"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/usu_img"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/usu_id"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/usu_lt"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/usu_lon"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/usu_formpgm"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/usu_dest"
            android:visibility="invisible" />


    </LinearLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_marginTop="240dp"
        android:apiKey="@string/google_maps_key">
    </fragment>

</RelativeLayout>
